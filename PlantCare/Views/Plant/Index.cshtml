
@model PlantsType

<h1>@Model.PlantTypeName</h1>

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.Plants)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@item.Image" width="100%" height="255%" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">@item.PlantName</p>
                            <p class="card-text">@item.About</p>
                            <p class="card-text">@item.Care</p>

                            <div class="d-flex justify-content-between align-items-center">
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>